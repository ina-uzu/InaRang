<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        style="@style/title"
        android:id="@+id/title"
        android:src="@drawable/from_jaewoo"/>

    <LinearLayout
        style="@style/body"
        android:layout_above="@+id/bottom"
        android:layout_marginBottom="30sp"
        android:background="@drawable/round">

        <LinearLayout
            android:layout_margin="10sp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/text_small_title"
                android:id="@+id/tv_date"
                android:textAlignment="center"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                style="@style/text_small_title"
                android:textColor="@color/normText"
                android:id="@+id/tv_title"
                android:layout_marginStart="10sp"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="3"/>

        </LinearLayout>

        <TextView
            style="@style/text_small_normal"
            android:id="@+id/tv_cont"
            android:layout_marginVertical="10sp"
            android:layout_marginHorizontal="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20sp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            style="@style/button_normal"
            android:id="@+id/bt_del"
            android:layout_margin="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제하기"/>

        <Button
            style="@style/button_normal"
            android:id="@+id/bt_prev"
            android:layout_margin="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="돌아가기"/>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        style="@style/fab_normal"
        android:id="@+id/fab"
        android:layout_marginBottom="20sp"
        android:layout_alignParentBottom="true" />

    <android.support.design.widget.FloatingActionButton
        style="@style/fab_normal"
        android:id="@+id/fab2"
        android:layout_above="@+id/fab"/>

    <android.support.design.widget.FloatingActionButton
        style="@style/fab_normal"
        android:id="@+id/fab3"
        android:layout_above="@+id/fab2"/>

    <android.support.design.widget.FloatingActionButton
        style="@style/fab_normal"
        android:id="@+id/fab4"
        android:layout_above="@+id/fab3"/>
</RelativeLayout>