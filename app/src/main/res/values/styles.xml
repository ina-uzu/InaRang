<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Layout -->
    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">70sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="body">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">30sp</item>
        <item name="android:layout_marginRight">30sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_below">@+id/title</item>
    </style>

    <!-- Font -->
    <style name="text_title">
        <item name = "android:textColor">@color/main</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="text_normal">
        <item name = "android:textColor">@color/normText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Buttons -->
    <style name="button_normal">
        <item name="android:background">@drawable/button_round</item>
        <item name = "android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fab_normal">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:backgroundTint">@color/main</item>
        <item name="android:layout_alignParentRight">true </item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:layout_marginRight">10sp</item>
    </style>

</resources>
